<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="104dp">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/cardview_elevation"
        app:cardElevation="4dp"
        card_view:cardCornerRadius="@dimen/cardview_elevation"
        card_view:contentPaddingBottom="@dimen/cardview_elevation"
        card_view:contentPaddingLeft="@dimen/cardview_elevation"
        card_view:contentPaddingRight="@dimen/cardview_elevation"
        card_view:contentPaddingTop="@dimen/cardview_elevation">

        <TextView
            android:id="@+id/market_price_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="24dp"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="24dp" />

        <TextView
            android:id="@+id/market_volume_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="48dp"
            tools:layout_editor_absoluteX="328dp"
            tools:layout_editor_absoluteY="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/market_price"
            tools:layout_editor_absoluteX="161dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/market_volume"
            tools:layout_editor_absoluteX="275dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/market_name"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:id="@+id/market_name_item"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="112dp"
            android:text="@string/some_market"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="24dp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>